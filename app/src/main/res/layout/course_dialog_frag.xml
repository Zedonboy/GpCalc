<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:theme="@style/AppTheme"
                                             android:background="@color/cardview_light_background">

    <EditText
            android:hint="Name of Course"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:id="@+id/course_dialog_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="98dp"
            android:layout_height="38dp"
            android:id="@+id/levels" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:entries="@array/grades_array"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/course_dialog_title"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="What Grade did you get?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/levels" android:layout_marginTop="16dp"
    />
    <Spinner
            android:layout_width="98dp"
            android:layout_height="38dp"
            android:id="@+id/unit_loader_spinner" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/levels" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:entries="@array/unit_load"/>
    <TextView
            android:text="Unit Load?"
            android:layout_width="149dp"
            android:layout_height="19dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>